<h2>Login</h2>
<%= form_for :session,method: :post,url: admin_path do |f|%>
  <%= f.label :email %>
  <%= f.text_field :email %><br />
  <%= f.label :password %>
  <%= f.password_field :password %><br />
  <input name="remember" type="checkbox" />记住登录<br/>
  <%= recaptcha_tags ssl: true  %>
  <%= f.submit "登录"%>
<% end%>
