<!DOCTYPE html>
<html>
<head>
  <title><%= full_title yield :title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header'%>

<div class="container">
  <div class="container-fluid">
    <div class="span8">
      <%= yield %>
    </div>
    <div class="span2">
      <%= render 'layouts/info' %>
    </div>
  </div>
</div>

<%= render 'layouts/footer'%>
</body>
</html>
