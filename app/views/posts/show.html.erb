<%provide :title,@post.title%>

<post>
<div class="post-title">
  <h1>
    <%= @post.title %>
  </h1>
</div>

<div class="post-body">
  <%= raw @post.body %>
</div>
<span class="date"><%=format_date @post.created_at%></span>
<% if admin? %>
  <%= link_to 'Edit', edit_post_path(@post) %>
<% end %>
<post>
<br />
<hr />
<%=render @comments%>
<p>
</p>
<%=render 'comments/form'%>

